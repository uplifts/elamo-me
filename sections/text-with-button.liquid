<div class="content-container">
  <div class="heading-wrapper">
    <h1>{{ section.settings.heading }}</h1>
  </div>
  <div class="button-wrapper">
    <a href="{{ section.settings.link }}">{{ section.settings.btn_txt }}</a>
  </div>
</div>

<style>
    #shopify-section-{{ section.id }} .content-container *{
      margin:0;
      box-sizing:border-box;
    }
  #shopify-section-{{ section.id }} .content-container{
    background:{{ section.settings.bg_color }};
    padding: 40px 45px;
    border-top:1px solid #8E827E99;
    display:flex;
    flex-direction:column;
    justify-content:center;
  }
  #shopify-section-{{ section.id }} .content-container .heading-wrapper h1{
    color:{{ section.settings.txt_color }};
    text-align: center;
    font-family: Roboto Condensed;
    font-size: 20px;
    font-style: normal;
    font-weight: 700;
    line-height: 22.287px; /* 111.435% */
    letter-spacing: 0.557px;
  }
  #shopify-section-{{ section.id }} .content-container .button-wrapper{
    margin-top:24px;
    text-align:center;
    }
  #shopify-section-{{ section.id }} .content-container .button-wrapper a{
          background:{{ section.settings.btn_bg_color }};
      display: inline-flex;
      padding: 8px 24px;
      justify-content: center;
      align-items: center;
    border-radius: 10px;
      color:{{ section.settings.btn_txt_color }};
      text-decoration:none;
      font-family: Roboto Condensed;
  font-size: 15px;
  font-style: normal;
  font-weight: 500;
  line-height: 24.48px; /* 163.2% */
  letter-spacing: 0.382px;
    }
  @media only screen and (max-width: 999px){
    #shopify-section-{{ section.id }} .content-container{
    background:{{ section.settings.bg_color }};
    padding: 32px 45px;
  }
    #shopify-section-{{ section.id }} .content-container .button-wrapper{
       margin-top:20px
    }
  }
</style>

{% schema %}
{
  "name": "text with button",
  "settings": [
    {
      "type": "text",
      "id": "heading",
      "label": "Heading"
    },
    {
    "type": "url",
    "id": "link",
    "label": "Link"
    },
    {
      "type": "text",
      "id": "btn_txt",
      "label": "Button Text"
    },
    {
      "type": "color",
      "id": "bg_color",
      "label": "Background Color"
    },
    {
      "type": "color",
      "id": "btn_bg_color",
      "label": "Button Color"
    },
    {
      "type": "color",
      "id": "txt_color",
      "label": "Text Color"
    },
    {
      "type": "color",
      "id": "btn_txt_color",
      "label": "Button Text Color"
    }
  ],
  "presets": [
    {
      "name": "text with button"
    }
  ]
}
{% endschema %}
