        {
          "type": "text",
          "id": "text",
          "label": "t:product_block.sales_point.settings.text.label",
          "default": "Free worldwide shipping"
        }
      ]
    },
    {
      "type": "text",
      "name": "t:product_block.text.name",
      "settings": [
        {
          "type": "text",
          "id": "css_class",
          "label": "t:product_block.text.settings.css_class.label"
        },
        {
          "type": "textarea",
          "id": "text",
          "default": "Text block",
          "label": "t:product_block.text.settings.text.label"
        }
      ]
    },
    {
      "type": "liquid",
      "name": "t:product_block.liquid.name",
      "settings": [
        {
          "type": "text",
          "id": "css_class",
          "label": "t:product_block.liquid.settings.css_class.label"
        },
        {
          "type": "liquid",
          "id": "liquid",
          "default": "Liquid",
          "label": "t:product_block.liquid.settings.liquid.label"
        }
      ]
    },
    {
      "type": "trust_badge",
      "name": "t:product_block.trust_badge.name",
      "settings": [
        {
          "type": "image_picker",
          "id": "trust_image",
          "label": "t:product_block.trust_badge.settings.trust_image.label"
        }
      ]
    },
    {
      "type": "tab",
      "name": "t:product_block.tab.name",
      "settings": [
        {
          "type": "text",
          "id": "css_class",
          "label": "t:product_block.tab.settings.css_class.label"
        },
        {
          "type": "checkbox",
          "id": "force_open",
          "label": "t:product_block.tab.settings.force_open.label"
        },
        {
          "type": "checkbox",
          "id": "below_buybox",
          "label": "t:product_block.tab.settings.below_buybox.label"
        },
        {
          "type": "image_picker",
          "id": "image",
          "label": "t:product_block.tab.settings.icon.label"
        },
        {
          "type": "text",
          "id": "title",
          "label": "t:product_block.tab.settings.title.label",
          "default": "Shipping information"
        },
        {
          "type": "richtext",
          "id": "content",
          "label": "t:product_block.tab.settings.content.label",
          "default": "<p>Use collapsible tabs for more detailed information that will help customers make a purchasing decision.</p><p>Ex: Shipping and return policies, size guides, and other common questions.</p>"
