        {
          "type": "liquid",
          "id": "liquid",
          "label": "t:product_block.tab.settings.liquid.label"
        },
        {
          "type": "page",
          "id": "page",
          "label": "t:product_block.tab.settings.page.label"
        }
      ]
    },
    {
      "type": "product_tabs",
      "name": "t:product_block.product_tabs.name",
      "settings": [
        {
          "type": "paragraph",
          "content": "Show expandable content boxes on your product pages. [Learn more](https:\/\/archetypethemes.co\/blogs\/streamline\/how-do-i-add-custom-product-page-tabs)."
        }
      ]
    },
    {
      "type": "share",
      "name": "t:product_block.share_on_social.name",
      "limit": 1,
      "settings": [
        {
          "type": "paragraph",
          "content": "t:product_block.share_on_social.settings.content"
        }
      ]
    },
    {
      "type": "separator",
      "name": "t:product_block.separator.name"
    },
    {
      "type": "contact",
      "name": "t:product_block.contact_form.name",
